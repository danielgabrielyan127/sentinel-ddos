# ──────────────────────────────────────────────────────────
# Sentinel DDoS — Environment Configuration
# ──────────────────────────────────────────────────────────
# Copy to .env and modify for your setup:
#   cp .env.example .env
# ──────────────────────────────────────────────────────────

# ── General ──────────────────────────────────────────────
SENTINEL_DEBUG=false
SENTINEL_HOST=0.0.0.0
SENTINEL_PORT=8000
SENTINEL_LOG_LEVEL=info

# ── Reverse Proxy ────────────────────────────────────────
# URL of your backend application to protect
SENTINEL_TARGET_URL=http://localhost:3000
SENTINEL_PROXY_TIMEOUT=30.0

# ── Redis ────────────────────────────────────────────────
SENTINEL_REDIS_URL=redis://redis:6379/0

# ── Database ─────────────────────────────────────────────
SENTINEL_DATABASE_URL=sqlite+aiosqlite:///./sentinel.db

# ── Protection ───────────────────────────────────────────
SENTINEL_PROTECTION_LEVEL=monitor
SENTINEL_RATE_LIMIT_PER_IP=100
SENTINEL_RATE_LIMIT_PER_SUBNET=1000
SENTINEL_RATE_LIMIT_GLOBAL=10000

# ── AI / Detection ──────────────────────────────────────
SENTINEL_BASELINE_LEARNING_HOURS=24
SENTINEL_ANOMALY_THRESHOLD=0.75

# ── Dashboard ────────────────────────────────────────────
SENTINEL_DASHBOARD_ENABLED=true
SENTINEL_DASHBOARD_USERNAME=admin
SENTINEL_DASHBOARD_PASSWORD=sentinel
SENTINEL_JWT_SECRET=change-me-in-production

# ── Alerts (optional) ───────────────────────────────────
# SENTINEL_TELEGRAM_BOT_TOKEN=
# SENTINEL_TELEGRAM_CHAT_ID=
# SENTINEL_WEBHOOK_URL=
